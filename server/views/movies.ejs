<%- contentFor('bodyContent') %>
<% if (movies.length> 0) { %>
    <% movies.map(movie=> { %>
        <div class="movie-container">
            <img src="<%= movie.poster %>" alt="<%= movie.title %> Poster">
            <div class="movie-info">
                <h1>
                    <%= movie.title %>
                </h1>
                <p class="overview">
                    <%= movie.overview %>
                </p>
            </div>
        </div>
    <% }) %>
<% } else { %>
    <h1>No movies were found. Please verify the name or try another one.</h1>
<% } %>
